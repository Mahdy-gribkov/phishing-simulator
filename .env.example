PORT=8080

# Mode: "direct" (MX delivery, port 25), "relay" (Brevo/SMTP), "open-relay" (no-auth relay)
SMTP_MODE=direct

# Spoofed From header  - any address you want recipients to see
SMTP_SENDER_EMAIL=donaldtrump@whitehouse.gov
SMTP_SENDER_NAME=Donald Trump

# --- Only needed for SMTP_MODE=relay ---
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-brevo-login@smtp-brevo.com
SMTP_PASS=xsmtpsib-your-key-here
SMTP_ENVELOPE_SENDER=you@your-verified-domain.com

# --- Only needed for SMTP_MODE=open-relay ---
# SMTP_HOST=<open-relay-ip>
# SMTP_PORT=25
# SMTP_USER=
# SMTP_PASS=

INSECURE_SKIP_VERIFY=false

# --- DKIM signing (optional - requires domain ownership) ---
DKIM_ENABLED=false
DKIM_PRIVATE_KEY_PATH=
DKIM_SELECTOR=default
DKIM_DOMAIN=
